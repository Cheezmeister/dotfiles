
# Alphabeticals
alias @='sudo'
alias a='ls -aph'
alias c='cat'
alias d='cd'
alias e='exit'
alias g='git'
alias h='hg'
alias l='ls -lph'
alias m=$PAGER
alias o=$OPENER
alias p='grep -P'
alias s='ls'
alias t='todo.sh'
alias u='cd ..'
alias v=$VISUAL
alias x='tmux -2'

# Meta
alias rz='source ~/.zshrc'
alias ez="$EDITOR ~/.zshrc"

# Git
alias gs='git status'
alias gd='git diff'

# Tmux
alias xa='tmux -2 attach -t'
alias xn='tmux -2 new-session -s'

# Applications
alias web=$WEB_BROWSER
alias term=$TERMINAL
alias fm='$FILE_MANAGER .'

# Misc
alias untargz='tar xvzf'
alias targz='tar cvzf'
alias syc='systemctl'
alias ssyc='sudo systemctl'
alias psag='ps aux | grep'
alias obliterate='rm -rf'

