
# Alphabeticals
alias @='sudo'
alias _='PATH=/usr/local/bin:~/bin:$PATH'
alias a='ls -alph'
alias c='cat'
alias d='cd'
alias e='exit'
alias g='git'
alias h='hg'
alias l="clear; r"
alias m=$PAGER
alias o=$OPENER
alias p='grep -P'
alias s='ls'
alias t='todo.sh'
alias u='cd ..'
alias v=$VISUAL
alias x='tmux -2'
alias z='7z'

# Meta
alias rz='source ~/.zshrc'
alias ez="$EDITOR ~/.zshrc"

# Tmux
alias xa='tmux -2 attach -t'
alias xn='tmux -2 new-session -s'

# Applications
alias web=$WEB_BROWSER
alias term=$TERMINAL
alias fm='$FILE_MANAGER .'

# Misc
alias untargz='tar xvzf'
alias targz='tar cvzf'
alias syc='systemctl'
alias ssyc='sudo systemctl'
alias psag='ps aux | grep'
alias obliterate='rm -rf'
alias wherewasi='cd -'

